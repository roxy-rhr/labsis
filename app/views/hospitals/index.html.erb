<h1>Listing hospitals</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Sigla</th>
      <th>Provincia</th>
      <th>Ciudad</th>
      <th>Direccion</th>
      <th>Logo</th>
      <th>Categoria</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @hospitals.each do |hospital| %>
      <tr>
        <td><%= hospital.nombre %></td>
        <td><%= hospital.sigla %></td>
        <td><%= hospital.provincia %></td>
        <td><%= hospital.ciudad %></td>
        <td><%= hospital.direccion %></td>
        <td><%= hospital.logo %></td>
        <td><%= hospital.categoria %></td>
        <td><%= link_to 'Show', hospital %></td>
        <td><%= link_to 'Edit', edit_hospital_path(hospital) %></td>
        <td><%= link_to 'Destroy', hospital, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

